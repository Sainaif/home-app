# External Nginx Reverse Proxy for Holy Home
# Place this in your nginx sites-available or proxy configuration
# The holy-home container handles all routing internally on port 16161

server {
    listen 80;
    server_name holy-home.example.com;

    location / {
        proxy_pass http://localhost:16161;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}
