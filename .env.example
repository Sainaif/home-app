APP_NAME=Holy Home
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=3000
APP_BASE_URL=http://localhost:16162

# JWT
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h
JWT_SECRET=change-this-access-secret
JWT_REFRESH_SECRET=change-this-refresh-secret

# Bootstrap admin (simple password for development - change in production!)
ADMIN_EMAIL=admin@example.pl
ADMIN_PASSWORD=admin123

# 2FA
AUTH_2FA_ENABLED=true

# Mongo
MONGO_URI=mongodb://mongo:27017
MONGO_DB=holyhome

# Logging
LOG_LEVEL=info
LOG_FORMAT=json